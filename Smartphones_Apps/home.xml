<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nano_android.home">

    <TextView
        android:text="HOMEPAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_user" />

    <Button
        android:onClick="home_value"
        android:text="GET DATA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_level"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_value" />

    <TextView
        android:text="DATA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView_data"
        android:layout_below="@+id/home_email"
        android:layout_alignLeft="@+id/textView_user"
        android:layout_alignStart="@+id/textView_user" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_times"
        android:layout_below="@+id/home_dates"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_level"
        android:layout_below="@+id/home_times"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/err"
        android:layout_below="@+id/home_logout"
        android:layout_alignLeft="@+id/textView_data"
        android:layout_alignStart="@+id/textView_data" />

    <Button
        android:onClick="home_logout"
        android:text="LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/home_logout"
        android:layout_below="@+id/home_off"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/home_dates"
        android:layout_below="@+id/textView_data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/home_name"
        android:layout_below="@+id/textView_user"
        android:layout_alignRight="@+id/textView_user"
        android:layout_alignEnd="@+id/textView_user" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_password"
        android:layout_below="@+id/home_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_email"
        android:layout_below="@+id/home_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="home_off"
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_off"
        android:layout_below="@+id/home_stop"
        android:layout_alignRight="@+id/home_level"
        android:layout_alignEnd="@+id/home_level"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <Button
        android:onClick="home_start"
        android:text="START PUMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_start"
        android:layout_alignBaseline="@+id/home_stop"
        android:layout_alignBottom="@+id/home_stop"
        android:layout_toRightOf="@+id/home_logout"
        android:layout_toEndOf="@+id/home_logout" />

    <Button
        android:onClick="home_stop"
        android:text="STOP PUMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_stop"
        android:layout_below="@+id/home_on"
        android:layout_toLeftOf="@+id/home_logout"
        android:layout_toStartOf="@+id/home_logout" />

    <Button
        android:onClick="home_on"
        android:text="ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/home_on"
        android:layout_below="@+id/textView_sys"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="SYSTEM CONTROL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView_sys"
        android:layout_below="@+id/home_value"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
